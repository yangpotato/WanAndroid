<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/tv_article_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:text="郭"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_article_text"/>
        <TextView
            android:id="@+id/tv_article_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="12dp"
            tools:text="昵称"
            android:gravity="center"
            android:paddingStart="8dp"
            android:layout_toRightOf="@id/tv_article_icon"/>
        <TextView
            android:id="@+id/tv_article_origin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            tools:text="公众号/郭霖"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/mainColor"/>
        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article_icon"
            tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
            android:textSize="14dp"
            android:paddingTop="8dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/articleTitleTextColor"/>
        <TextView
            android:id="@+id/tv_article_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_article_title"
            android:drawableLeft="@drawable/ic_access_time_20dp"
            tools:text="Time"
            android:gravity="center"
            android:textSize="12dp"
            android:drawablePadding="5dp"/>
        <ImageButton
            android:id="@+id/ibt_article_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@null"
            android:layout_below="@+id/tv_article_title"
            android:layout_toLeftOf="@id/ibt_article_star"
            android:paddingEnd="10dp"/>
        <ImageButton
            android:id="@+id/ibt_article_star"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_un_star"
            android:background="@null"
            android:layout_below="@+id/tv_article_title"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>